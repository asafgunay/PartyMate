<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title • PartyMate</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo-css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendojs")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PartyMate", "Index", new { area = "", controller = "Home" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a runat="server" data-toggle="dropdown" class="nav-buttons-custom"><span class="glyphicon glyphicon-list-alt" /> Clubs <span class="caret" /></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Upcomming", "UpcommingTrips", "Trip")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a runat="server" data-toggle="dropdown" class="nav-buttons-custom"><span class="glyphicon glyphicon-list-alt" /> Events <span class="caret" /></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Upcomming", "UpcommingTrips", "Trip")</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year • <a href="https://github.com/kossov/PartyMate">PartyMate</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
